<Window x:Class="ControlBrazoRobotico.SequenceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Programador de Secuencias" Height="744" Width="880"
        Background="#121212" WindowStartupLocation="CenterOwner" MinWidth="880" MinHeight="400">

    <Window.Resources>
        
        <Style x:Key="BtnStop" TargetType="Button" BasedOn="{StaticResource BtnEstiloBase}">
            <Setter Property="Background" Value="#B43232"/>
        </Style>
        <Style x:Key="BtnSave" TargetType="Button" BasedOn="{StaticResource BtnEstiloBase}">
            <Setter Property="Background" Value="#2ECC71"/>
            <Setter Property="Height" Value="38"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="250"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="160"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Grid.ColumnSpan="2" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="60"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="SECUENCIA DE MOVIMIENTOS:" Foreground="White" FontSize="16" FontWeight="Bold" VerticalAlignment="Center"/>
            <TextBlock Grid.Column="1" Text="RETRASO (MS):" Foreground="#888" VerticalAlignment="Center" FontSize="10" Margin="10,0,5,0"/>
            <TextBox Grid.Column="2" x:Name="txtDelay" Text="1500" Height="28" Background="#222" Foreground="White" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>

            <Button Grid.Column="4" x:Name="btnPlay" Content="REPRODUCIR" Style="{StaticResource BtnPlay}" Width="120" Margin="10,0,0,0" Click="BtnPlay_Click"/>
            <Button Grid.Column="5" x:Name="btnStop" Content="DETENER" Style="{StaticResource BtnStop}" Width="85" Margin="10,0,0,0" Click="BtnStop_Click" IsEnabled="False"/>
            <Button Grid.Column="6" x:Name="btnLimpiar" Content="LIMPIAR" Style="{StaticResource BtnClear}" Width="80" Margin="10,0,0,0" Click="BtnClear_Click"/>
            <CheckBox Grid.Column="7" x:Name="chkBucle" Content="MODO BUCLE" Style="{StaticResource ChkBucleEstilo}" Margin="15,0,10,0"/>
        </Grid>

        <Border Grid.Row="1" Grid.Column="0" Background="#1E1E1E" CornerRadius="10" BorderBrush="#333" BorderThickness="2" AllowDrop="True" DragEnter="Timeline_DragEnter" DragLeave="Timeline_DragLeave" DragOver="Timeline_DragOver" Drop="Timeline_Drop">
            <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
                <WrapPanel x:Name="panelTimeline" Orientation="Horizontal" Margin="5"/>
            </ScrollViewer>
        </Border>

        <Border Grid.Row="1" Grid.Column="1" Grid.RowSpan="3" Margin="15,0,0,0" Background="#181818" CornerRadius="10" Padding="12">
            <StackPanel>
                <Button Content="GUARDAR ESTA RUTINA" Style="{StaticResource BtnSave}" Margin="0,0,0,15" Click="BtnGuardarRutina_Click"/>
                <TextBlock Text="RUTINAS GUARDADAS" Foreground="#555" FontSize="10" FontWeight="Bold" Margin="0,0,0,10" HorizontalAlignment="Center"/>
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel x:Name="panelRutinasSaved"/>
                </ScrollViewer>
            </StackPanel>
        </Border>

        <TextBlock Grid.Row="2" Grid.Column="0" Text="⬇ ARRASTRA LAS POSICIONES ABAJO PARA EDITAR LA SECUENCIA ⬇" 
                   Foreground="#444" FontSize="10" Margin="0,15" HorizontalAlignment="Center" FontWeight="Bold"/>

        <Border Grid.Row="3" Grid.Column="0" Background="#181818" CornerRadius="10" Padding="10">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <WrapPanel x:Name="panelLibrary" Orientation="Horizontal"/>
            </ScrollViewer>
        </Border>

    </Grid>
</Window>