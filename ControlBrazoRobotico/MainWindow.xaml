<Window x:Class="ControlBrazoRobotico.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Control Brazo Robótico - 6 Servomotores" Height="600" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Consola y Estado -->
        <GroupBox Grid.Row="2" Header="Consola y Estado">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="txtConsola" Height="80" IsReadOnly="True" VerticalScrollBarVisibility="Auto" 
     TextWrapping="Wrap" Grid.Column="0"/>
                <Button x:Name="btnLimpiarConsola" Content="Limpiar" Click="BtnLimpiarConsola_Click" 
    Grid.Column="1" Margin="5,0,0,0" Padding="10,5"/>
            </Grid>
        </GroupBox>

        <!-- Controles de Servomotores -->
        <TabControl Grid.Row="1" Margin="0,0,0,10">
            
            <!-- Servo 1 - Base -->
            <TabItem Header="Base (Servo 1)">
                <StackPanel Margin="10">
                    <TextBlock Text="Control de Rotación Base (0° - 180°)" FontWeight="Bold" Margin="0,0,0,10"/>
                    <TextBlock x:Name="txtServo1" Text="90°" HorizontalAlignment="Center"/>
                    <Slider x:Name="sliderServo1" Minimum="0" Maximum="180" Value="90" ValueChanged="Slider_ValueChanged"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                        <Button Content="0°" Click="BtnPosicion_Click" Tag="1,0" Margin="5"/>
                        <Button Content="45°" Click="BtnPosicion_Click" Tag="1,45" Margin="5"/>
                        <Button Content="90°" Click="BtnPosicion_Click" Tag="1,90" Margin="5"/>
                        <Button Content="135°" Click="BtnPosicion_Click" Tag="1,135" Margin="5"/>
                        <Button Content="180°" Click="BtnPosicion_Click" Tag="1,180" Margin="5"/>
                    </StackPanel>
                </StackPanel>
            </TabItem>

            <!-- Servo 2 - Hombro -->
            <TabItem Header="Hombro (Servo 2)">
                <StackPanel Margin="10">
                    <TextBlock Text="Control de Hombro (0° - 180°)" FontWeight="Bold" Margin="0,0,0,10"/>
                    <TextBlock x:Name="txtServo2" Text="90°" HorizontalAlignment="Center"/>
                    <Slider x:Name="sliderServo2" Minimum="0" Maximum="180" Value="90" ValueChanged="Slider_ValueChanged"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                        <Button Content="0°" Click="BtnPosicion_Click" Tag="2,0" Margin="5"/>
                        <Button Content="90°" Click="BtnPosicion_Click" Tag="2,90" Margin="5"/>
                        <Button Content="180°" Click="BtnPosicion_Click" Tag="2,180" Margin="5"/>
                    </StackPanel>
                </StackPanel>
            </TabItem>

            <!-- Servo 3 - Codo -->
            <TabItem Header="Codo (Servo 3)">
                <StackPanel Margin="10">
                    <TextBlock Text="Control de Codo (0° - 180°)" FontWeight="Bold" Margin="0,0,0,10"/>
                    <TextBlock x:Name="txtServo3" Text="90°" HorizontalAlignment="Center"/>
                    <Slider x:Name="sliderServo3" Minimum="0" Maximum="180" Value="90" ValueChanged="Slider_ValueChanged"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                        <Button Content="0°" Click="BtnPosicion_Click" Tag="3,0" Margin="5"/>
                        <Button Content="90°" Click="BtnPosicion_Click" Tag="3,90" Margin="5"/>
                        <Button Content="180°" Click="BtnPosicion_Click" Tag="3,180" Margin="5"/>
                    </StackPanel>
                </StackPanel>
            </TabItem>

            <!-- Servo 4 - Muñeca -->
            <TabItem Header="Muñeca (Servo 4)">
                <StackPanel Margin="10">
                    <TextBlock Text="Control de Muñeca (0° - 180°)" FontWeight="Bold" Margin="0,0,0,10"/>
                    <TextBlock x:Name="txtServo4" Text="90°" HorizontalAlignment="Center"/>
                    <Slider x:Name="sliderServo4" Minimum="0" Maximum="180" Value="90" ValueChanged="Slider_ValueChanged"/>

                </StackPanel>
            </TabItem>

            <!-- Servo 5 - Rotación Muñeca -->
            <TabItem Header="Rotación Muñeca (Servo 5)">
                <StackPanel Margin="10">
                    <TextBlock Text="Rotación Muñeca (0° - 180°)" FontWeight="Bold" Margin="0,0,0,10"/>
                    <TextBlock x:Name="txtServo5" Text="90°" HorizontalAlignment="Center"/>
                    <Slider x:Name="sliderServo5" Minimum="0" Maximum="180" Value="90" ValueChanged="Slider_ValueChanged"/>

                </StackPanel>
            </TabItem>

            <!-- Servo 6 - Pinza -->
            <TabItem Header="Pinza (Servo 6)">
                <StackPanel Margin="10">
                    <TextBlock Text="Control de Pinza (0° - 180°)" FontWeight="Bold" Margin="0,0,0,10"/>
                    <TextBlock x:Name="txtServo6" Text="90°" HorizontalAlignment="Center"/>
                    <Slider x:Name="sliderServo6" Minimum="0" Maximum="180" Value="90" ValueChanged="Slider_ValueChanged"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                        <Button Content="Abrir" Click="BtnPinza_Click" Tag="abrir" Margin="5"/>
                        <Button Content="Cerrar" Click="BtnPinza_Click" Tag="cerrar" Margin="5"/>
                    </StackPanel>
                </StackPanel>
            </TabItem>

            <!-- Control Coordinado -->
            <TabItem Header="Control Coordinado">
                <StackPanel Margin="10">
                    <TextBlock Text="Control de Todos los Servos" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>

                    <GroupBox Header="Posiciones Rápidas" Margin="0,0,0,10">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                            <Button Content="Posición Home" Click="BtnPosicionHome_Click" Margin="5" Padding="10,5"/>
                            <Button Content="Posición Reposo" Click="BtnPosicionReposo_Click" Margin="5" Padding="10,5"/>
                            <Button Content="Posición Trabajo" Click="BtnPosicionTrabajo_Click" Margin="5" Padding="10,5"/>
                            <Button Content="Movimiento Suave" Click="BtnMovimientoSuave_Click" Margin="0,10,0,0" Padding="10,5" 
        Background="LightBlue" ToolTip="Movimiento coordinado y suave hacia la posición"/>
                        </StackPanel>
                    </GroupBox>

                    <GroupBox Header="Control Manual Coordinado">
                        <StackPanel Margin="10">
                            <TextBlock Text="Base:" Margin="0,0,0,5"/>
                            <Slider x:Name="sliderCoordServo1" Minimum="0" Maximum="180" Value="90" ValueChanged="SliderCoord_ValueChanged"/>
                            <TextBlock Text="Hombro:" Margin="0,10,0,5"/>
                            <Slider x:Name="sliderCoordServo2" Minimum="0" Maximum="180" Value="90" ValueChanged="SliderCoord_ValueChanged"/>
                            <TextBlock Text="Codo:" Margin="0,10,0,5"/>
                            <Slider x:Name="sliderCoordServo3" Minimum="0" Maximum="180" Value="90" ValueChanged="SliderCoord_ValueChanged"/>
                            <Button Content="Enviar Todas las Posiciones" Click="BtnEnviarTodo_Click" Margin="0,10,0,0" Padding="10,5"/>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </TabItem>
        </TabControl>

        <!-- Configuración Puerto COM -->
        <GroupBox Grid.Row="0" Header="Configuración de Conexión" Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal" Margin="10">
                <TextBlock Text="Puerto COM:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <TextBlock Text="Baud Rate:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <ComboBox x:Name="cmbPuertos" Width="80" Margin="0,0,10,0"/>

                <TextBlock Text="Modo:" VerticalAlignment="Center" Margin="0,0,5,0"/>



                <ComboBox x:Name="cmbBaudRate" Width="80" Margin="0,0,10,0" SelectedIndex="0">
                    <ComboBoxItem Content="9600"/>
                </ComboBox>

                <Button x:Name="btnConectar" Content="Conectar" Click="BtnConectar_Click" Margin="0,0,10,0"/>
                <Button x:Name="btnDesconectar" Content="Desconectar" Click="BtnDesconectar_Click" IsEnabled="False"/>
                <TextBlock x:Name="txtEstado" Margin="10,0,0,0" VerticalAlignment="Center" Foreground="Red" Text="Desconectado"/>
                <ComboBox x:Name="cmbModoConexion" Width="120" Margin="0,0,10,0" SelectedIndex="0" SelectionChanged="BtnCambiarModo_Click">
                    <ComboBoxItem Content="Serial (COM)"/>
                    <ComboBoxItem Content="Remoto (MQTT)"/>
                </ComboBox>
            </StackPanel>
        </GroupBox>


    </Grid>
</Window>