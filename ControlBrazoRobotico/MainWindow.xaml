<Window x:Class="ControlBrazoRobotico.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Industrial Robot Control - PRO" Height="736" Width="770"
        Background="#121212" WindowStartupLocation="CenterScreen"
        Icon="pack://application:,,,/Recursos/Icono.ico">

    <Window.Resources>
        <SolidColorBrush x:Key="OrangeAccent" Color="#FF6D00"/>
        <SolidColorBrush x:Key="CardBg" Color="#1E1E1E"/>
        <SolidColorBrush x:Key="TextWhite" Color="#F0F0F0"/>
        <SolidColorBrush x:Key="TextDim" Color="#888888"/>

        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardBg}"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="20" ShadowDepth="4" Opacity="0.5" Color="Black"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernSlider" TargetType="{x:Type Slider}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Slider}">
                        <Grid VerticalAlignment="Center">
                            <Border Background="#333" Height="6" CornerRadius="3" Margin="5,0"/>
                            <Track x:Name="PART_Track">
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Command="{x:Static Slider.DecreaseLarge}">
                                        <RepeatButton.Template>
                                            <ControlTemplate TargetType="RepeatButton">
                                                <Border Background="{StaticResource OrangeAccent}" Height="6" CornerRadius="3"/>
                                            </ControlTemplate>
                                        </RepeatButton.Template>
                                    </RepeatButton>
                                </Track.DecreaseRepeatButton>
                                <Track.Thumb>
                                    <Thumb Width="12" Height="22">
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="Thumb">
                                                <Border Background="#DDD" CornerRadius="3" BorderBrush="{StaticResource OrangeAccent}" BorderThickness="1"/>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="BtnOrange" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource OrangeAccent}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FF8500"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="BtnDark" TargetType="Button" BasedOn="{StaticResource BtnOrange}">
            <Setter Property="Background" Value="#2D2D2D"/>
            <Setter Property="Foreground" Value="#AAA"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.LayoutTransform>
            <ScaleTransform ScaleX="0.7" ScaleY="0.7"/>
        </Grid.LayoutTransform>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="2" Style="{StaticResource CardStyle}" Margin="0,15,0,0" Padding="15,10">
            <StackPanel>
                <DockPanel Margin="0,0,0,5">
                    <TextBlock Text="SISTEMA LOG" Foreground="{StaticResource TextDim}" FontSize="10" FontWeight="Bold"/>
                    <Button Content="LIMPIAR" Style="{StaticResource BtnDark}" Height="20" Width="80" FontSize="9" HorizontalAlignment="Right" Click="BtnLimpiarConsola_Click"/>
                </DockPanel>
                <TextBox x:Name="txtConsola" Height="123" Background="Black" Foreground="#00FF00" FontFamily="Consolas" BorderThickness="0" IsReadOnly="True" VerticalScrollBarVisibility="Auto" Padding="5"/>
            </StackPanel>
        </Border>

        <Border Grid.Row="0" Style="{StaticResource CardStyle}" Padding="15,10" Margin="0,0,0,20">
            <DockPanel>
                <StackPanel Orientation="Horizontal" Height="36">
                    <TextBlock Text="MODO:" VerticalAlignment="Center" Foreground="{StaticResource TextDim}" Margin="0,0,10,0" FontWeight="Bold" FontSize="11"/>
                    <ComboBox x:Name="cmbModoConexion" Width="130" SelectedIndex="0" Margin="0,0,20,0" SelectionChanged="BtnCambiarModo_Click" Height="24">
                        <ComboBoxItem Content="Serial (COM)"/>
                        <ComboBoxItem Content="Remoto (MQTT)"/>
                    </ComboBox>

                    <TextBlock Text="PUERTO:" VerticalAlignment="Center" Foreground="{StaticResource TextDim}" Margin="0,0,10,0" FontWeight="Bold" FontSize="11"/>
                    <ComboBox x:Name="cmbPuertos" Width="100" Margin="0,0,20,0" Height="25"/>

                    <Button x:Name="btnConectar" Content="CONECTAR" Style="{StaticResource BtnOrange}" Width="120" Click="BtnConectar_Click"/>
                    <Button x:Name="btnDesconectar" Content="DESCONECTAR" Style="{StaticResource BtnDark}" Width="120" Margin="10,0" IsEnabled="False" Click="BtnDesconectar_Click"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <Ellipse x:Name="ledEstado" Width="10" Height="10" Fill="Red" Margin="0,0,10,0"/>
                    <TextBlock x:Name="txtEstado" Text="DESCONECTADO" VerticalAlignment="Center" Foreground="Red" FontWeight="Bold"/>
                </StackPanel>
            </DockPanel>
        </Border>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="420"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Style="{StaticResource CardStyle}" Margin="10,0,74,0">
                <Border.Background>
                    <ImageBrush ImageSource="pack://application:,,,/Recursos/brazo.png" 
                    Stretch="Uniform" 
                    Opacity="0.8">
                    </ImageBrush>
                </Border.Background>
            </Border>

            <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <Border Style="{StaticResource CardStyle}" Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="CONTROL MANUAL DE JUNTAS" Foreground="{StaticResource OrangeAccent}" FontWeight="Bold" Margin="0,0,0,20"/>

                            <StackPanel Margin="0,0,0,10">
                                <DockPanel Margin="0,0,0,2">
                                    <TextBlock Text="Base (S1)" Foreground="{StaticResource TextWhite}"/>
                                    <TextBlock x:Name="txtServo1" Text="90°" Foreground="White" FontSize="20" HorizontalAlignment="Right"/>
                                </DockPanel>
                                <Slider x:Name="sliderServo1" Style="{StaticResource ModernSlider}" Minimum="0" Maximum="180" Value="90" ValueChanged="Slider_ValueChanged" Margin="0,0,0,15"/>

                                <DockPanel Margin="0,0,0,2">
                                    <TextBlock Text="Hombro (S2)" Foreground="{StaticResource TextWhite}"/>
                                    <TextBlock x:Name="txtServo2" Text="90°" Foreground="White" FontSize="20" HorizontalAlignment="Right"/>
                                </DockPanel>
                                <Slider x:Name="sliderServo2" Style="{StaticResource ModernSlider}" Minimum="0" Maximum="180" Value="90" ValueChanged="Slider_ValueChanged" Margin="0,0,0,15"/>

                                <DockPanel Margin="0,0,0,2">
                                    <TextBlock Text="Codo (S3)" Foreground="{StaticResource TextWhite}"/>
                                    <TextBlock x:Name="txtServo3" Text="90°" Foreground="White" FontSize="20" HorizontalAlignment="Right"/>
                                </DockPanel>
                                <Slider x:Name="sliderServo3" Style="{StaticResource ModernSlider}" Minimum="0" Maximum="180" Value="90" ValueChanged="Slider_ValueChanged" Margin="0,0,0,15"/>

                                <DockPanel Margin="0,0,0,2">
                                    <TextBlock Text="Muñeca (S4)" Foreground="{StaticResource TextWhite}"/>
                                    <TextBlock x:Name="txtServo4" Text="90°" Foreground="White" FontSize="20" HorizontalAlignment="Right"/>
                                </DockPanel>
                                <Slider x:Name="sliderServo4" Style="{StaticResource ModernSlider}" Minimum="0" Maximum="180" Value="90" ValueChanged="Slider_ValueChanged" Margin="0,0,0,15"/>

                                <DockPanel Margin="0,0,0,2">
                                    <TextBlock Text="Rotación (S5)" Foreground="{StaticResource TextWhite}"/>
                                    <TextBlock x:Name="txtServo5" Text="90°" Foreground="White" FontSize="20" HorizontalAlignment="Right"/>
                                </DockPanel>
                                <Slider x:Name="sliderServo5" Style="{StaticResource ModernSlider}" Minimum="0" Maximum="180" Value="90" ValueChanged="Slider_ValueChanged" Margin="0,0,0,15"/>
                            </StackPanel>

                            <Border BorderBrush="#333" BorderThickness="0,1,0,0" Padding="0,15,0,0">
                                <StackPanel>
                                    <DockPanel Margin="0,0,0,2">
                                        <TextBlock Text="Pinza (S6)" Foreground="{StaticResource OrangeAccent}" FontWeight="Bold"/>
                                        <TextBlock x:Name="txtServo6" Text="90°" Foreground="White" FontSize="20" HorizontalAlignment="Right"/>
                                    </DockPanel>
                                    <Slider x:Name="sliderServo6" Style="{StaticResource ModernSlider}" Minimum="0" Maximum="180" Value="90" ValueChanged="Slider_ValueChanged" Margin="0,0,0,15"/>

                                    <UniformGrid Columns="2">
                                        <Button Content="ABRIR" Style="{StaticResource BtnOrange}" Margin="5" Click="BtnPinza_Click" Tag="abrir"/>
                                        <Button Content="CERRAR" Style="{StaticResource BtnOrange}" Margin="5" Click="BtnPinza_Click" Tag="cerrar"/>
                                    </UniformGrid>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Border>

                    <Border Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <TextBlock Text="POSICIONES RÁPIDAS" Foreground="{StaticResource TextDim}" FontWeight="Bold" Margin="0,0,0,10" FontSize="10"/>
                            <WrapPanel x:Name="panelPosiciones" HorizontalAlignment="Center">
                                <Button Content="HOME" Style="{StaticResource BtnDark}" Width="100" Margin="5" Click="BtnPosicionHome_Click"/>
                                <Button Content="REPOSO" Style="{StaticResource BtnDark}" Width="100" Margin="5" Click="BtnPosicionReposo_Click"/>
                                <Button Content="TRABAJO" Style="{StaticResource BtnDark}" Width="100" Margin="5" Click="BtnPosicionTrabajo_Click"/>
                            </WrapPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>